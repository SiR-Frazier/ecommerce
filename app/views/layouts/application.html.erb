<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
     <link href="https://fonts.googleapis.com/css?family=Berkshire+Swash|Poiret+One" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
      <div class="jumbotron" id="jumbotron1">
        <img src="">
        <h1>Vault Books</h1>
        <h3>Find your next book here.</h3>
      </div>
      <div class="card" id="header">
        <div class ="card-body">
         <% if current_account %>
           <%= current_account.email %> | <%= link_to "Sign out", '/signout' %>
         <% else %>
           <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
         <% end %> |
         <%= link_to "Books", products_path %> |
         <%= link_to "Cart", cart_path %>
         <%= flash[:alert] %>
         <%= flash[:notice] %>
        </div>
      </div>
      <%= yield %>
   </body>
</html>
